// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Component {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  children    Component?  @relation("childrenOfComponent", fields: [id], references: [id])
  Component   Component[] @relation("childrenOfComponent")
  Fields      Field[]
}

model Field {
  id          Int        @id @default(autoincrement())
  name        String
  type        String
  value       String
  Component   Component? @relation(fields: [componentId], references: [id])
  componentId Int?
}
